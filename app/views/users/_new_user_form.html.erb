<%= form_for @user, :url => users_path(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div><%= f.label :name %>
  <%= f.text_field :name %></div>
  <br />

  <div><%= f.label :email %>
  <%= f.email_field :email %></div>
  <br />

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>
  <br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>
  <br />

  <div><%= f.label :admin %>
  <%= f.check_box :admin %></div>
  <br />

  <div><%= f.label :wallet %>
  <%= f.number_field :wallet, :value => 100 %>
  <br />

  <%= f.hidden_field :organization_id, :value => current_user.organization_id %>

  <div class="actions"><%= f.submit "Create New User", :class => 'button small alert radius' %></div>
<% end %>
