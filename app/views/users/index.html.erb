<div class="row">
  <div class= "small-1 columns">&nbsp</div>
  <div class= "small-10 columns">
    <h1><%= current_user.organization.name %>'s Users</h1>
  </div>
  <div class= "small-1 columns">&nbsp</div>
</div>

<div class="row">
  <div class= "small-1 columns">&nbsp</div>
  <div class= "small-10 medium-4 large-4 columns">
    <%= form_tag users_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search], :placeholder => "Search by name" %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>

    <table class="my-tables">
      <thead>
        <tr>
          <th>Name</th>
          <th>Edit User</th>
          <th>Delete User</th>
        </tr>
      </thead>

      <tbody>
        <% for user in @users %>
          <tr>
            <td><%= user.name %></td>
            <td><%= link_to "Edit", edit_user_path(user), :class => 'button tiny radius', :style => 'padding:10px; margin:0px' %></td>
            <td><%= link_to "Delete", user_path(user), :method => :delete, :class => 'button tiny alert radius', :style => 'padding:10px; margin:0px' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class= "small-1 medium-7 large-7 columns">&nbsp</div>
</div>