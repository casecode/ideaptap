<nav class="top-bar" data-topbar>
  <section class="top-bar-section">
    <ul class="right">
      <%= user_logged_out do %>
        <li><a href="#" data-dropdown="signin">Sign In</a></li>
      <% end %>
      <%= user_logged_in do %>
        <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
      <% end %>
    </ul>
  </section>
</nav>

<!-- Sign In Dropdown -->
<div id="signin" class="f-dropdown small content" data-dropdown-content>
  <!-- Sign In Form -->
  <h5>Sign in</h5>
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
    <%= f.text_field :email, placeholder: 'email' %>
    <%= f.password_field :password, placeholder: 'password' %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit 'Sign in', :class => 'button tiny' %>
  <% end %>
  <hr>
  <!-- Password Reset Form -->
  <h5>Forgot password?</h5>
  <%= form_for(:user, :url => new_password_path(:user), :html => { :method => :post }) do |f| %>
    <%= f.email_field :email, placeholder: 'email' %>
    <%= f.submit "Send me reset password instructions", :class => 'button tiny' %>
  <% end %>
</div>
